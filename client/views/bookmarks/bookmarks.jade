
.row
  .col-xs-3
    h4 Add a Category
    form(role='form', novalidate, name='categoryForm')
      .form-group
        label(for='name') Name
        input.form-control#name(type='text', name='name', ng-model='name', autofocus, required)
      button.btn.btn-primary(ng-show='categoryForm.$valid', ng-click='addCategory()') Add Category
  .col-xs-9
.row
  .col-xs-12
    ul
      li(ng-repeat='category in categories') {{category.name}}

.row
  .col-xs-3
    h4 Add a Bookmark
    form(role='form', novalidate, name='bookmarkForm')
      .form-group
        label(for='name') Name
        input.form-control#name(type='text', name='name', ng-model='bookmark.name', autofocus, required)
      button.btn.btn-primary(ng-show='bookmarkForm.$valid', ng-click='addBookmark()') Add Bookmark


    .col-xs-3
      h4 Bookmarks
      table.table-bordered
        thead
          tr
            th Name
            th Category
            th Date
        tbody
          tr(ng-repeat='b in bookmarks')
            td {{b.name}}
            td {{b.category}}
            td {{b.date}}
